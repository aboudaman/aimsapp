</style>
<div class="container">
  
    <div class="row" style="margin-top: 25px;"> 
        <div class="col">
            <h4>Add Core Crop Items to Database</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form action="/crop/register" method="post">
                <div class="form-group">
                  <label for="formGroupExampleInput" style="margin-top: 10px;">Core Crop Item</label>
                  <input type="text" class="form-control" name="coreCrop" id="formGroupExampleInput" placeholder="Enter Core Crop Item" required>
                </div>
                <button type="submit" class="btn btn-primary">Add Crop</button>
              </form>
        </div>
    </div>

    <!-- Using Custom Filter/Search -->
    <div class="row" style="margin-top: 55px;">
        <div class="col-md-8">
            <div class="card-header" style="margin-bottom: 25px;">
                <h6> Existing Core Crops In AIMS Database </h6>
            </div>
            <table class="table table-bordered" id="myTable">
                <thead style="background-color: rgba(0,0,0,.03);">
                    <tr>
                      <th class="">Core Crops</th>
                    </tr>
                  </thead>
                <tbody>
                    <% crops.forEach( crop => { %>
                  <tr>
                    <td> <%= crop.crop %> 
                        <span class="float-right">
                            <button type="button" class="btn btn-light"> <a href="<%= `/crop/${crop._id}/editcrop` %> ">EDIT</a></button> |
                            <button type="button" class="btn btn-light"> 
                            <a class="delete" data-title="Delete Crop Item?" href="<%= `/crop/${crop._id}/deletecrop?_method=DELETE` %>">DELETE</a> 
                            </button>
                        </span>
                    </td>

                  </tr>
                  <%  }) %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- END Custom Filter/Search -->


</div>

<script type="text/javascript">
$(document).ready( function () {
    $('#myTable').DataTable();
} );



// Function to confirm Deletion
$('a.delete').confirm({
                content: "Are you Sure you want to delete this item?",
                buttons: {
                    Yes: function(){
                        location.href = this.$target.attr('href');
                    },
                    No: function(){}
                }
});

</script>