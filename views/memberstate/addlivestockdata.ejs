<%- include("../submenu/admin_sadc") -%>
<!-- Start Bootstrap Form -->
<div class="container">
	<h4 style="margin-top: 25px;"> Add New livestock Data for <%= memberState.countryName %></h4>
	<div class="row" style="margin-top: 55px;">
		<div class="col">
			<form action="<%= `/production/${memberState._id}/livestock/register` %>" method="post">
				<div class="form-group">
					<label for="Livestock Name">Livestock Name</label>
					<select class="form-control" name="selectlivestock">
						<% livestocks.forEach(livestock => {%>
						<option><%= livestock.name %></option>
						<% }) %>
					</select>
				</div>
				<div class="form-group">
					<label for="Production Quantity">Enter Production Quantity</label>
					<input type="text" name="quantity" class="form-control" placeholder="Enter Production Quantity in tonnes..." >
				</div>
				<div class="form-group">
					<label for="Year">Enter Year</label>
					<input type="text" name="year" class="form-control" placeholder="Enter Year..." >
				</div>

				<button class="btn btn-primary" type="submit" style="margin-bottom: 25px;">Submit form</button>
				<button class="btn btn-primary" type="cancel" style="margin-bottom: 25px;">Cancel</button>

			  </form>
		</div>
	</div>
</div>
