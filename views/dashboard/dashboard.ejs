    a:link {
        text-decoration: none;
    }
</style>

<div class="container">
    <h4 style="margin-top: 25px;" class="capital"> Visual Analytics Toools for <%= memberState.countryName %> </h4>

<div class="row">
    <div class="col-md-6">
        <div class="row" style="margin-top: 40px;">
            <div class="col-md-6">
                
                    <div class="card cardList" style="width: 12rem;">
                        <img src="/images/icons/analytics.png" class="card-img-top" 
                            alt="livestock icon" style="width: 80px; margin-left:20px;">
                        <div class="card-body">
                            <a href="/dashboard/livestockanalytics/<%= memberState._id %>"><h5 class="card-title">Livestock Analytics</h5></a>
                        </div>
                    </div>
                
            </div>
            <div class="col-md-6">
                <div class="card cardList" style="width: 12rem;">
                    <img src="/images/icons/analytics.png" style="width: 80px; margin-left:20px;"
