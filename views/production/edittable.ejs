<%- include("../submenu/admin_sadc") -%>

<style>
    a:link {
        text-decoration: none;
    }
</style>

<div class="container">
    <h4 style="margin-top: 25px;">Livestock Production Data for <%= memberState.countryName %></h4>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered" id="livestock" style="margin-top: 25px">
                <thead>
                  <tr>
                    <!-- <th scope="col">#</th> -->
                    <th scope="col">Livestock </th>
                    <th scope="col">Annual Total</th> 
                    <th scope="col">Reporting Year</th>
                  </tr>
                </thead>
                <tbody>
                  <% livestocks.forEach(livestock => { %>
                    <tr>
                      <td><%=livestock.livestock %> 
                          <span class="float-right">
                              <a href="/production/<%=memberState._id %>/<%= livestock._id %>/livestock/edit">EDIT </a>|
                              <a href="/production/<%=memberState._id %>/<%=livestock._id %>/delete?_method=DELETE" class="delete" data-title="Delete livestock record?" > Delete </a> 
                                
                          </span>
                      </td>
                      <td><%=livestock.quantity %></td>
                      <td><%=livestock.reportingYear %></td>
                    </tr>
                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>

<script   type="text/javascript">
  $(document).ready( function () {
      $('#livestock').DataTable();
  } );
  $('a.delete').confirm({
            content: "Are you Sure you want to Delete?",
            buttons: {
                Yes: function(){
                    location.href = this.$target.attr('href');
                },
                No: function(){}
            }
        });



</script>