
<div class="container">
	<h4 style="margin-top: 25px;"> Register A User </h4>
	<div class="row" style="margin-top: 55px;">
		<div class="col-md-6">
			<form action="/users/register" method="post">
				<div class="form-group">
					<label for="User Name">Enter Email Address</label>
					<input type="text" name="email" class="form-control" placeholder="Enter Email..." >
				</div>
				<div class="form-group">
					<label for="exampleFormControlSelect1">AIMS Systems Role</label>
					<select class="form-control" id="exampleFormControlSelect1" name="role">
					  <option>Administrator</option>
					  <option>User</option>
					</select>
				</div>
				<div class="form-group">
					<label for="password">Enter Password</label>
					<input type="password" name="password" class="form-control" placeholder="Enter Password..." >
				</div>
				<div class="form-group">
					<label for="password2">Re-Enter Password</label>
					<input type="password" name="password2" class="form-control" placeholder="Re-Enter Password..." >
				</div>

				<button class="btn btn-primary" type="submit" style="margin-bottom: 25px;">Create User</button>
				<button class="btn btn-primary" type="cancel" style="margin-bottom: 25px;">Cancel</button>

			</form>
		</div>
	</div>
</div>